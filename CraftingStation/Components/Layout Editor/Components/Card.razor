@using CraftingStation.Components.Layout_Editor.Data
@inherits BaseContainer

<EditorComponent ComponentData="Container">
    <TelerikCard>
        <CardHeader>
            <BaseContainer Container="HeaderContainer" />
        </CardHeader>
        <CardBody>
            @*  @((RenderFragment)base.BuildRenderTree) *@
            <BaseContainer Container="BodyContainer" />
        </CardBody>
    </TelerikCard>
</EditorComponent>

@code {
    // [Parameter]
    // public ContainerData Container { get; set; }

    [Parameter]
    public SubContainerData HeaderContainer { get; set; } = new SubContainerData(typeof(Div));

    [Parameter]
    public SubContainerData BodyContainer { get; set; } = new SubContainerData(typeof(Div));

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        HeaderContainer.Parent = this.Container;
        BodyContainer.Parent = this.Container;
        this.UpdateParam(nameof(HeaderContainer), HeaderContainer);
        this.UpdateParam(nameof(BodyContainer), BodyContainer);
    }
}
